<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    	<class name="com.scarecrow.bean.Admin" table="admin">
    		<id name="id" column="admin_id" type="integer" >
    			<generator class="native"/>	
    		</id>
    		<property name="adminName" 		column="admin_name" 		type="string"/>
    		<property name="adminPassword" 	column="admin_password" 	type="string"/>
    		<property name="adminPermission" column="admin_permission" 	type="int"/>
    	</class>
</hibernate-mapping>
